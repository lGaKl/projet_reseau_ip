    color: #fff;
    border: 2px solid #C7C5B8;
    border-radius:15px;
    font-weight : bold;
}

#registerBtn:hover{
    background-color: #a43f3f;
}


/* gui_main.py*/
/**************/

#toolBarTop {
    background-color: #f0f0f0;
    border: none;
    padding: 5px;
}

#toolBarTop QToolButton {
    background-color: #b05457;
    color: white;
    font-size: 14px;
    border: 1px solid #d0d0d0;
    padding: 8px 12px;
    border-radius: 4px;
    font-weight : bold;
}

#toolBarTop QToolButton:hover {
    background-color : #7d393c;
}

#toolBarTop QToolButton:pressed {
    background-color: #d0d0d0; /* Couleur lorsque le bouton est press√© */
}

