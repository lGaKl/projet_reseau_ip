/* login.py */
/************/

#title_label {
    color: black;
    font-size: 48px;
    font-style: 'Arial';
    font-weight : bold;
}

#username_input {
    font-style : 'Arial';
    font-size: 32px;
    background-color : #F7F7F7;
    border:  2px solid #C7C5B8;
    border-radius: 15px;
    font-weight : bold;
}

#username_input:hover{
    background-color : #C7C5B8;
}

#password_input {
    font-style : 'Arial';
    font-size: 32px;
    background-color : #F7F7F7;
